@model CreatePopularLocationDto

@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Yeni Lokasyon Oluştur</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Lokasyonlar</a></li>
                    <li class="breadcrumb-item active">Yeni Lokasyon Oluştur</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-location-name">Lokasyon Adı</label>
                                <input class="form-control" id="txt-location-name" asp-for="location_name" placeholder="Lokasyon Adı Giriniz" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-location-image">Lokasyon Fotoğrafı</label>
                                <input class="form-control" id="txt-location-image" asp-for="image" placeholder="Lokasyon Fotoğrafı Seçiniz" />
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Yeni Lokasyon Oluştur</button>
                </form>
            </div>
        </div>
    </div>
</div>

