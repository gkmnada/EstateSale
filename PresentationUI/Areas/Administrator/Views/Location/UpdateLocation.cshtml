@model LocationViewModel

@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Lokasyon Güncelle</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Lokasyonlar</a></li>
                    <li class="breadcrumb-item active">Lokasyon Güncelle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-location-name">Lokasyon Adı</label>
                                <input class="form-control" id="txt-location-name" value="@Model.GetPopularLocationDto.location_name" asp-for="UpdatePopularLocationDto.location_name" placeholder="Lokasyon Adı Giriniz" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-location-image">Lokasyon Fotoğrafı</label>
                                <input class="form-control" id="txt-location-image" value="@Model.GetPopularLocationDto.image" asp-for="UpdatePopularLocationDto.image" placeholder="Lokasyon Fotoğrafı Seçiniz" />
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="@Model.GetPopularLocationDto.location_id" asp-for="UpdatePopularLocationDto.location_id" />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

