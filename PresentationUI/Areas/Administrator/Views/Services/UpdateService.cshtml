@model ServicesViewModel

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Hizmet Güncelle</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Hizmetlerimiz</a></li>
                    <li class="breadcrumb-item active">Hizmet Güncelle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label for="txt-service">Hizmet Adı</label>
                                <input class="form-control" id="txt-service" value="@Model.GetServiceDto.service_name" asp-for="UpdateServiceDto.service_name" placeholder="Hizmet Adı Giriniz" />
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="@Model.GetServiceDto.service_id" asp-for="UpdateServiceDto.service_id" />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

