@model BottomGridViewModel

@{
    ViewData["Title"] = "UpdateBottomGrid";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Ana Hizmet Güncelle</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Ana Hizmetlerimiz</a></li>
                    <li class="breadcrumb-item active">Ana Hizmet Güncelle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-title">Başlık</label>
                                <input class="form-control" id="txt-title" value="@Model.GetBottomGridDto.title" asp-for="UpdateBottomGridDto.title" placeholder="Başlık Giriniz" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="txt-icon">İkon</label>
                                <input class="form-control" id="txt-icon" value="@Model.GetBottomGridDto.icon" asp-for="UpdateBottomGridDto.icon" placeholder="İkon Seçiniz" />
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label for="txt-description">Açıklama</label>
                                <textarea class="form-control" id="txt-description" name="UpdateBottomGridDto.description" placeholder="Açıklama Giriniz">@Model.GetBottomGridDto.description</textarea>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="@Model.GetBottomGridDto.bottom_grid_id" asp-for="UpdateBottomGridDto.bottom_grid_id" />
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

