@model CreateLoginDto

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Estate Sale - Emlak Yönetim Paneli</title>

    <link rel="shortcut icon" href="/admin-template/assets/images/favicon.ico">

    <link href="/admin-template/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/admin-template/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="/admin-template/assets/css/theme.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5 d-none d-lg-block bg-login rounded-left"></div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center mb-5">
                                            <a href="index.html" class="text-dark font-size-22 font-family-secondary">
                                                <b>Estata Sale - Emlak Yönetim Paneli</b>
                                            </a>
                                        </div>
                                        <h1 class="h5 mb-1">Hoş Geldiniz !</h1>
                                        <p class="text-muted mb-4">Emlak Yönetim Paneline Erişmek İçin Kullanıcı Adınızı ve Şifrenizi Giriniz</p>
                                        <form class="user" method="post">
                                            <div class="form-group">
                                                <input type="text" class="form-control form-control-user" asp-for="username" id="exampleInputEmail" placeholder="Kullanıcı Adınızı Girin">
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control form-control-user" asp-for="password" id="exampleInputPassword" placeholder="Şifrenizi Girin">
                                            </div>
                                            <button type="submit" class="btn btn-success btn-block waves-effect waves-light"> Giriş Yap </button>
                                            <div class="text-center mt-4">
                                                <h5 class="text-muted font-size-16">Kullanarak Oturum Açın</h5>
                                                <ul class="list-inline mt-3 mb-0">
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-secondary text-secondary"><i class="mdi mdi-facebook"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i class="mdi mdi-instagram"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-info text-info"><i class="mdi mdi-twitter"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-secondary text-secondary"><i class="mdi mdi-github-circle"></i></a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </form>
                                        <div class="row mt-4">
                                            <div class="col-12 text-center">
                                                <p class="text-muted mb-2"><a href="#" class="text-muted font-weight-medium ml-1">Şifreni mi Unuttun ?</a></p>
                                                <p class="text-muted mb-0">Hesabın Yok mu? <a href="#" class="text-muted font-weight-medium ml-1"><b>Kayıt Ol</b></a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/admin-template/assets/js/jquery.min.js"></script>
    <script src="/admin-template/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/admin-template/assets/js/metismenu.min.js"></script>
    <script src="/admin-template/assets/js/waves.js"></script>
    <script src="/admin-template/assets/js/simplebar.min.js"></script>

    <script src="/admin-template/assets/js/theme.js"></script>
</body>
</html>
